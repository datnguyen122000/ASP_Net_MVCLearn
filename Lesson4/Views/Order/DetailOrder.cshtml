@model Lesson4.Models.Order

@{
    ViewData["Title"] = "DetailOrder";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

<h1>Chi tiết đơn hàng</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
    <div>Chi tiết đơn hàng <a href="~/Order/AddDetail?id=@Model.Id">Thêm</a></div>
    <table border="1">
        <tr>
            <th>Mã máy</th>
            <th>Dòng máy</th>
            <th>Giá bán</th>
            <th>Ngày sản xuất</th>
            <th>Hãng sản xuất</th>
            <th>#</th>
        </tr>
        @foreach(var item in Model.computers)
        {
            <tr>
                <td> @item.Id</td>
                <td> @item.Serie</td>
                <td> @item.Price</td>
                <td> @item.ProductDate</td>
                <td> @item.Manufacturer</td>
                <td><a href="~/Order/EditDetail?idComputer=@item.Id&idOrder=@Model.Id">Sửa</a><a href="~/Order/DeleteDetail?idComputer=@item.Id&idOrder=@Model.Id">Xóa</a></td>
            </tr>
        }
    </table>
</div>
<div>
    <a href="~/Order/ListOrders">Quay lại</a>
</div>
