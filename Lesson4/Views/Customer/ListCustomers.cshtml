@model IEnumerable<Lesson4.Models.Customer>

@{
    ViewData["Title"] = "ListCustomers";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

<h1>ListCustomers</h1>

<p>
    <a asp-action="Create">Create New</a>
    <h4>Danh sách khách hàng</h4>
    <button><a href="~/Customer/AddNewCustomer">Thêm mới</a></button>
</p>
<table class="table" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                <a href="~/Customer/EditCustomer?id=@item.Id">Sửa</a> |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                <a href="~/Customer/DeleteCustomer?id=@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
